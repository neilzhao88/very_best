<div class="page-header">
  <h3>Bookmark #<%= @bookmark.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Dish</dt>
      <dd>
        <% if @bookmark.dish.present? %>
          <a href="/dishes/<%= @bookmark.dish_id %>">
            <%= @bookmark.dish.created_at %>
          </a>
        <% end %>
      </dd>

      <dt>Bucketlist</dt>
      <dd>
        <% if @bookmark.bucketlist.present? %>
          <a href="/bucketlists/<%= @bookmark.bucketlist_id %>">
            <%= @bookmark.bucketlist.user_id %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/bookmarks" class="btn btn-primary">
        Back
      </a>
      <a href="/bookmarks/<%= @bookmark.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_bookmark/<%= @bookmark.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
