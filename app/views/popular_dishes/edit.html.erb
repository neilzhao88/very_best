<!-- Validation failure messages -->
<% if @popular_dish.errors.any? %>
  <% @popular_dish.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Popular Dish #<%= @popular_dish.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_popular_dish/<%= @popular_dish.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for venue_id -->
      <div class="form-group">
        <label for="venue_id" class="control-label">
          Venue
        </label>

        <input type="text" id="venue_id" name="venue_id" placeholder="Venue" class="form-control" value="<%= @popular_dish.venue_id %>">
      </div>

      <!-- Label and input for favorites_id -->
      <div class="form-group">
        <label for="favorites_id" class="control-label">
          Favorites
        </label>

        <input type="text" id="favorites_id" name="favorites_id" placeholder="Favorites" class="form-control" value="<%= @popular_dish.favorites_id %>">
      </div>

      <button class="btn btn-warning">
        Update Popular Dish
      </button>
      or
      <a href="/popular_dishes/<%= @popular_dish.id %>">Cancel</a>
    </form>
  </div>
</div>
