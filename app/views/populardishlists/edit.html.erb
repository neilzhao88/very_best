<!-- Validation failure messages -->
<% if @populardishlist.errors.any? %>
  <% @populardishlist.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Populardishlist #<%= @populardishlist.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_populardishlist/<%= @populardishlist.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for venue_id -->
      <div class="form-group">
        <label for="venue_id" class="control-label">
          Venue
        </label>

        <%= select_tag(:venue_id, options_from_collection_for_select(Venue.all, :id, :name, @populardishlist.venue_id), :class => "form-control") %>
      </div>

      <!-- Label and input for bookmarks_id -->
      <div class="form-group">
        <label for="bookmarks_id" class="control-label">
          Bookmarks
        </label>

        <input type="text" id="bookmarks_id" name="bookmarks_id" placeholder="Bookmarks" class="form-control" value="<%= @populardishlist.bookmarks_id %>">
      </div>

      <button class="btn btn-warning">
        Update Populardishlist
      </button>
      or
      <a href="/populardishlists/<%= @populardishlist.id %>">Cancel</a>
    </form>
  </div>
</div>
