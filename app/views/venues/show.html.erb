<div class="page-header">
  <h3>Venue #<%= @venue.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @venue.name %></dd>

      <dt>Neighborhood</dt>
      <dd><%= @venue.neighborhood %></dd>

      <dt>Address</dt>
      <dd><%= @venue.address %></dd>

      <dt>Dish</dt>
      <dd>
        <% if @venue.dish.present? %>
          <a href="/dishes/<%= @venue.dish_id %>">
            <%= @venue.dish.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/venues" class="btn btn-primary">
        Back
      </a>
      <a href="/venues/<%= @venue.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_venue/<%= @venue.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Venue has many popular_dishes -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Popular Dishes
      </li>

      <% @venue.popular_dishes.each do |populardishlist| %>
        <li class="list-group-item">
          <a href="/populardishlists/<%= populardishlist.id %>">
            <%= populardishlist.venue_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/populardishlists/<%= populardishlist.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/populardishlists/<%= populardishlist.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_populardishlist/<%= populardishlist.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>

      <li class="list-group-item">
        <form action="/create_populardishlist" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for venue_id -->
      <input type="hidden" name="venue_id" value="<%= @venue.id %>">

      <!-- Label and input for bookmarks_id -->
      <div class="form-group">
        <label for="bookmarks_id" class="control-label">
          Bookmarks
        </label>

        <input type="text" id="bookmarks_id" name="bookmarks_id" placeholder="Bookmarks" class="form-control" value="">
      </div>

      <button class="btn btn-block btn-success">
        Create Populardishlist
      </button>
    </form>
      </li>
    </ul>
  </div>
</div>
